<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <title>Travel info</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <!-- Bootstrap -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
  <!-- Custome styles -->
  <link rel="stylesheet" href="../css/styles-travelinfo.css">
  <!-- Font awesome script -->
  <script src="https://kit.fontawesome.com/c5971a1024.js" crossorigin="anonymous"></script>
</head>

<body>
  <!-- header section -->
  <header>
    <!-- header background image -->
    <img class="bg" src="../media/Background_ejs.jpg" alt="img">
    <!-- logo -->
    <div class="logo">
      <img src="../media/logo.png" alt="logo-pic">
      <h2>EBG Travel</h2>
    </div>
    <!-- link to return to home page -->
  </header>

  <!--  title section -->
  <section class="title">
    <h3>Your travel itenarary</h2>
      <a href="http://localhost:3000">Return to home</a>
  </section>

  <!-- main result section -->
  <main>
    <!-- section to include travel destination -->
    <section class="travel-dest">
      <% for (let i = 0; i<imageUrl.length; i++) { %>
      <div class="tile">
        <div class="tile-text">
          <div class="tile-data">
            <h5>Trip to: <%= cityArray[i] %></h5>
            <h5>in: <%= countdowns[i] %> Days</h5>
          </div>
          <button type="button" class="btn btn-primary">Remove trip</button>
        </div>
        <div class="info-btn">
          <button type="button" class="btn btn-danger">Weather info</button>
          <button type="button" class="btn btn-danger">Hotel info</button>
        </div>
        <img src=<%= imageUrl[i] %> alt="test">
      </div>
      <%    } %>
    </section>
    <!-- section to include travel info -->
    <section class="travel-info">

    </section>
  </main>





  <!-- jquery slim for Bootstrap -->
  <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
  <!-- popper for Bootstrap  -->
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
  <!-- Bootstrap  -->
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
  <!-- jQuery -->
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
  <!-- custom javascript -->
  <script type="module" src="../js/travelinfo.js"></script>

</body>

</html>
